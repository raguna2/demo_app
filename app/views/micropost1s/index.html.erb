<h1>Listing micropost1s</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @micropost1s.each do |micropost1| %>
      <tr>
        <td><%= micropost1.content %></td>
